          td.req-table__cell
            p.req-table__cell-title pROCESSOR:
            p.req-table__cell-description Intel Core 2 Duo @ 2.4 GHZ or AMD Athlon X2 @ 2.8 GHZ
        tr.req-table__row
          td.req-table__cell
            p.req-table__cell-title mEMORY:
            p.req-table__cell-description 8 GB RAM

          td.req-table__cell
            p.req-table__cell-title storage:
            p.req-table__cell-description 8 GB available space
        tr.req-table__row
          td.req-table__cell(colspan=2)
            p.req-table__cell-title GRAPHICS:
            p.req-table__cell-description NVIDIA GeForce GTX 660 2GB or AMD Radeon HD 7850 2GB DirectX11 (Shader Model 5)
